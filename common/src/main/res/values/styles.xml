<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--<attr name="dayNightBackground" format="color|reference" />-->
    <!--<attr name="dayNightOneTextColor" format="color|reference" />-->
    <!--<attr name="dayNightTwoTextColor" format="color|reference" />-->
    <!--<attr name="dayNightThreeTextColor" format="color|reference" />-->
    <!--<attr name="dayNightBackgroundDrawable" format="color|reference" />-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/night_one_text_color</item>

        <item name="dayNightBackground">@color/day_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/day_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/day_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/day_three_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/day_backgroup_color</item>
    </style>
    <!--冷启动界面-->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--白天主题，此处直接和AppTheme一样-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/night_one_text_color</item>

        <item name="dayNightBackground">@color/day_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/day_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/day_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/day_three_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/day_backgroup_color</item>
    </style>
    <!--夜间主题-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/night_backgroup_color</item>
        <item name="colorPrimaryDark">@color/night_backgroup_color</item>
        <item name="colorAccent">@color/night_backgroup_color</item>

        <item name="dayNightBackground">@color/night_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/night_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/night_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/night_there_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/night_there_text_color</item>

    </style>

    <!--窗口淡入淡出动画-->
    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- basedialog的样式 -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MyDialognew" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 自定义进度条 -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>


    <style name="DialogContent">
        <item name="android:textColor">#2a2a2a</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="customdialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--dialog-->
    <style name="MyDialog1" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--验证码dialog最外层-->
    <style name="dialoglLinLayout">
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:layout_marginLeft">@dimen/common_dialog_margin</item>
        <item name="android:layout_marginRight">@dimen/common_dialog_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dialogLayout">
        <item name="android:layout_marginBottom">@dimen/common_dialog_linLayout_marginBottom</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/common_dialog_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/common_dialog_marginLeft</item>
    </style>
    <style name="dialogTil">
        <item name="android:hint">@string/login_imagecode</item>
        <item name="android:layout_marginTop">@dimen/common_dialog_linLayout_margintop</item>
        <item name="android:layout_weight">@dimen/common_dialog_right</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="dialogEt">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/common_edit_text_size_new</item>
        <item name="android:textColor">@color/common_top_title_color_new</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="dialogIV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/common_dialog_left</item>
        <item name="android:layout_marginTop">@dimen/common_dialog_iv_marginTop</item>

    </style>
    <style name="dialogBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/common_dialog_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/common_dialog_marginLeft</item>
        <item name="android:background">@drawable/button_bg_new</item>
        <item name="android:textSize">@dimen/common_btn_text_size</item>
        <item name="android:layout_marginTop">@dimen/common_dialog_btn_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/common_dialog_btn_marginTop</item>
        <item name="android:textColor">@color/common_btn_text_color_new</item>
        <item name="android:layout_height">@dimen/common_btn_height_new</item>
    </style>
    <style name="common_dialog_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_top_view_height_new</item>
        <item name="android:background">@color/common_dialog_view_color_new</item>

    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--底部弹框-->
    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>